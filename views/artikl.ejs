<%- include partials/header1v2.ejs %>
     <link rel="stylesheet" type="text/css" href="../css/shop.css">
<%- include partials/nav.ejs %>

     

<section id="artikal">
         
                <div class="containerr">
                    <div class="row">
                        
                        <div class=" col-md-4">
                            <img class="slika" src="<%=artikl.slika%>" alt="lila"/>
                            <div class="card">
                                <h1 class="naslov-artikla"> <%=artikl.naziv%></h1>
                                <h2 class="cijena"> <%=artikl.cijena%> $ </h2>
                               <% if(currentUser){ console.log(artikl._id) %>
                                <a href="/shop/<%= artikl._id %>/buy"><button class="btn btn-kupi">Dodaj u košaricu</button></a>
                          
                             <% } %>
                            </div>
                    
                        </div>
                         <div class=" col-md-8">
                          <div class="card-opis-artikla">
                                <h1 class="naslov-artikla-opem"><%=artikl.naziv%></h1>
                               
                              <p>
                                  <%=artikl.opis%>
                             </p>
                                
                            
                            </div>
                        </div>
                        
                        <% if(currentUser){ if(currentUser.isAdmin == true){ %>
                           <div class=" col-md-8">
                        
                         
                              <a href="<%=artikl._id%>/edit"><button type="button" class="btn btn-warning">Edituj artikl</button></a>
        
         <form action="/shop/<%=artikl._id%>?_method=DELETE" method="post">
             <button type="submit" class="btn btn-danger" >Pobriši artikl</button>
        </form>
                            
                            
                        </div>
                      <% }} %>
 
                         
                    </div>
                </div>
               
        </section>
        
        





