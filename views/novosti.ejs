<% include partials/header1.ejs %>
<% include partials/nav.ejs %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Novosti</h1>
            <p>novosti</p>
            <% if(currentUser){ if(currentUser.isAdmin == true){ %>
            <p> 
                <a class="btn btn-primary btn-lg" href="/novosti/new">dodaj novost</a>
            </p>
            <% }}%>
        </div>
</header>

    <!--<div class="col-lg-12">-->
    <!--    <h3>Our Most Popular Site</h3>-->
    <!--</div>-->
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% novosti.forEach(function(novost){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%=novost.thumbnail%>">
                    <div class="caption">
                        <h4> <%=novost.naslov%> </h4>
                        <p>
                            <a href="/novosti/<%=novost._id%>" class="btn btn-primary">Pročitaj više</a>
                        </p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>
